<%= render 'shared/navbar_others' %>

<div class="cocktail-photo" style="background-image: url('<%= cl_image_path @cocktail.photo %>')">

</div>

<div class="container">
  <div class="content show-box">
    <div class="left-content">
      <h2><%= @cocktail.name %></h2>

      <h4>Ingredient List</h4>

      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.ingredient.name %> (<%= dose.description %>) <%= link_to '<i class="far fa-trash-alt text-danger"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
          </li>
        <% end %>
      </ul>
      <%= link_to 'Back to All Cocktails', root_path, class: 'btn btn-primary'%>
    </div>

    <div class="right-content">
      <h2>Add Dose</h2>
      <%= render 'doses/new', cocktail: @cocktail, dose: @dose  %>
    </div>
  </div>
</div>




