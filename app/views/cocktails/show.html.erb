<div class="container">
  <div class="content">
    <div class="left-content">
      <h1><%= @cocktail.name %></h1>

      <h4>Ingredient List</h4>

      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.ingredient.name %> (<%= dose.description %>) <%= link_to '<i class="far fa-trash-alt text-danger"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
          </li>
        <% end %>
      </ul>
      <%= link_to 'Back to All Cocktails', cocktails_path, class: 'btn btn-primary'%>
    </div>

    <div class="right-content">
      <h1>Add Dose</h1>
      <%= render 'doses/new', cocktail: @cocktail, dose: @dose  %>
    </div>
  </div>
</div>

